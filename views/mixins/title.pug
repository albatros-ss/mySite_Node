mixin title(text, modificator)
    div(class!= 'title-box ' +  attributes.class)
        if modificator
            +iconsvg('three_bals-rev')(class!=attributes.class)
        else 
            +iconsvg('two_bals-rev')(class!=attributes.class)
        div(class!= (modificator ? 'title ' : 'title-under ') + attributes.class + '_text')= text
        if modificator
            +iconsvg('three_bals')(class!=attributes.class)
        else 
            +iconsvg('two_bals')(class!=attributes.class)